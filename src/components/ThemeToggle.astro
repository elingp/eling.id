---
import { Icon } from "astro-icon/components";
---

<theme-toggle class="ms-3 sm:ms-4">
	<button
		class="hover:text-accent focus-visible:ring-accent relative h-9 w-9 cursor-pointer rounded-md p-2 focus-visible:ring-2 focus-visible:outline-none"
		type="button"
	>
		<span class="sr-only">Dark mode</span>
		<Icon
			aria-hidden="true"
			name="fa7-regular:sun"
			title="Toggle Dark Theme"
			class="absolute start-1/2 top-1/2 h-7 w-7 -translate-x-1/2 -translate-y-1/2 scale-100 opacity-100 transition-all dark:scale-0 dark:opacity-0"
		/>
		<Icon
			aria-hidden="true"
			name="fa7-regular:moon"
			title="Toggle Light Theme"
			class="absolute start-1/2 top-1/2 h-6 w-6 -translate-x-1/2 -translate-y-1/2 scale-0 opacity-0 transition-all dark:scale-100 dark:opacity-100"
		/>
	</button>
</theme-toggle>

<script>
	// Note that if you fire the theme-change event outside of this component, it will not be reflected in the button's aria-checked attribute. You will need to add an event listener if you want that.
	import { rootInDarkMode } from "@/utils/domElement";

	class ThemeToggle extends HTMLElement {
		constructor() {
			super();
			const button = this.querySelector<HTMLButtonElement>("button");

			if (button) {
				const updateAriaState = () => {
					button.setAttribute("aria-pressed", String(rootInDarkMode()));
				};

				updateAriaState();

				button.addEventListener("click", () => {
					const themeChangeEvent = new CustomEvent("theme-change", {
						detail: {
							theme: rootInDarkMode() ? "light" : "dark",
						},
					});
					document.dispatchEvent(themeChangeEvent);
					updateAriaState();
				});

				document.addEventListener("theme-change", updateAriaState);
				document.addEventListener("astro:after-swap", updateAriaState);
				window
					.matchMedia("(prefers-color-scheme: light)")
					.addEventListener("change", updateAriaState);
			} else {
				console.warn("Theme Toggle: No button found");
			}
		}
	}

	customElements.define("theme-toggle", ThemeToggle);
</script>
