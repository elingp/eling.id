---
import { type CollectionEntry } from "astro:content";
import PostPreview from "@/components/blog/PostPreview.astro";
import ExternalLink from "@/components/ExternalLink.astro";
import SocialList from "@/components/SocialList.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";

// Posts
const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts.sort(collectionDateSort) as CollectionEntry<"post">[];
const latestPosts = allPostsByDate.slice(0, MAX_POSTS);

// Pinned Posts, set to a max of 3;
const MAX_PINNED_POSTS = 3;
const pinnedPosts = allPostsByDate.filter((p) => p.data.pinned).slice(0, MAX_PINNED_POSTS);

const elingProject: { desc: string; href: string; title: string }[] = [
	{
		desc: "AI app to recognize several categories of foods and their calories.",
		href: "https://github.com/husain502/Careproject",
		title: "CARE (Camera Calories)",
	},
	{
		desc: "Simple ML algorithms from scratch using Python.",
		href: "https://github.com/elingp/ml-from-scratch",
		title: "ML from Scratch",
	},
	{
		desc: "SPA boilerplate using vanilla JavaScript and Webpack 5.",
		href: "https://github.com/elingp/vanilla-spa-webpack-boilerplate",
		title: "SPA Webpack Boilerplate",
	},
	{
		desc: "Forum-style programming Q&A website.",
		href: "https://github.com/elingp/tanja-pemrograman",
		title: "Tanja Pemrograman",
	},
	{
		desc: "Internal study resources aggregator website.",
		href: "https://github.com/elingp/seenau",
		title: "Seenau",
	},
	{
		desc: "Health Center patient information management website.",
		href: "https://github.com/elingp/sistem-informasi-puskesmas",
		title: "Sistem Informasi Puskesmas",
	},
];
---

<PageLayout meta={{ title: "Home" }} sourcePath="src/pages/index.astro">
	<header class="sr-only">
		<h1 id="page-title">Home</h1>
	</header>
	<section class="prose prose-lg md:prose-xl" aria-labelledby="intro-heading">
		<h2 class="sr-only" id="intro-heading">Introduction</h2>
		<p class="mb-4">
			Hi! I’m <b>Eling</b> (he/him). I write about my fascination with tech, my hobbies (like manga, anime,
			and TTRPGs), and other random musings. I’m still discovering my niche, so you’ll find a bit of everything
			that captures my interest. Enjoy!
		</p>
		<div class="not-prose"><SocialList /></div>
	</section>
	{
		pinnedPosts.length > 0 && (
			<section class="mt-12">
				<h2 class="text-global-text mb-6 text-2xl font-bold md:text-3xl">
					<a class="hover:text-accent" href="/posts/">
						Pinned posts
					</a>
				</h2>
				<ul class="space-y-4 md:space-y-2">
					{pinnedPosts.map((p) => (
						<li>
							<PostPreview post={p} />
						</li>
					))}
				</ul>
			</section>
		)
	}
	<section class="mt-12">
		<h2 class="text-global-text mb-6 text-2xl font-bold md:text-3xl">
			<a class="hover:text-accent" href="/posts/">Recent posts</a>
		</h2>
		<ul class="space-y-4 md:space-y-2">
			{
				latestPosts.map((p) => (
					<li>
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-12">
		<h2 class="text-global-text mb-6 text-2xl font-bold md:text-3xl">Public projects</h2>
		<ul class="space-y-4 md:space-y-2">
			{
				elingProject.map(({ desc, href, title }) => (
					<li class="grid gap-1 text-base sm:grid-cols-[auto_1fr] md:gap-5 md:text-lg">
						<ExternalLink
							class="cactus-link has-external-icon is-external min-w-66 font-semibold md:font-medium"
							href={href}
						>
							{title}
						</ExternalLink>
						{desc}
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
