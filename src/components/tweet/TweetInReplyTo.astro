---
import type { EnrichedTweet } from "./api.ts";

interface Props {
	tweet: EnrichedTweet;
}

const { tweet } = Astro.props;
---

<div class="tweet-in-reply-to">
	Replying to{" "}
	{
		tweet.in_reply_to_url ? (
			<a href={tweet.in_reply_to_url} target="_blank" rel="noopener noreferrer">
				@{tweet.in_reply_to_screen_name}
			</a>
		) : (
			<span>@{tweet.in_reply_to_screen_name}</span>
		)
	}
</div>
