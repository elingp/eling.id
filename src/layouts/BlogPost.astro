---
import { type CollectionEntry, render } from "astro:content";
import BackToTop from "@/components/BackToTop.astro";
import Masthead from "@/components/blog/Masthead.astro";
import TOC from "@/components/blog/TOC.astro";
import WebMentions from "@/components/blog/webmentions/index.astro";
import { getEffectiveUpdatedDate } from "@/utils/updatedDate";

import BaseLayout from "./Base.astro";

interface Props {
	post: CollectionEntry<"post">;
}

const { post } = Astro.props;
const { ogImage, title, description, updatedDate, publishDate, autoUpdateDate } = post.data;
const socialImage = ogImage ?? `/og-image/${post.id}.png`;
const { headings, remarkPluginFrontmatter } = await render(post);
const readingTime: string = remarkPluginFrontmatter.minutesRead;

const finalUpdatedDate = getEffectiveUpdatedDate(
	{ publishDate, updatedDate, autoUpdateDate },
	remarkPluginFrontmatter.lastModified,
);
const articleDate = (finalUpdatedDate ?? publishDate).toISOString();

// Get the source file path for GitHub link from the remark plugin
const sourcePath = remarkPluginFrontmatter.gitSourcePath as string;
---

<BaseLayout
	meta={{
		articleDate,
		description,
		ogImage: socialImage,
		title,
	}}
	sourcePath={sourcePath}
>
	<article class="grow wrap-break-word" data-pagefind-body>
		<header id="blog-hero" class="mb-12">
			<Masthead content={post} readingTime={readingTime} updatedDate={finalUpdatedDate} />
		</header>
		<section
			class="flex flex-col gap-10 lg:flex-row lg:items-start lg:justify-between"
			aria-labelledby="post-title"
		>
			{
				!!headings.length && (
					<aside
						aria-label="Table of contents"
						class="lg:sticky lg:top-12 lg:order-2 lg:-me-32 lg:basis-64"
					>
						<TOC headings={headings} />
					</aside>
				)
			}
			<section
				class="prose prose-lg md:prose-xl prose-headings:text-global-text prose-th:before:content-none max-w-full lg:max-w-none lg:flex-1"
				aria-labelledby="post-content"
			>
				<h2 class="sr-only" id="post-content">Article content</h2>
				<slot />
				<WebMentions />
			</section>
		</section>
	</article>
	<BackToTop />
</BaseLayout>
