---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import PageLayout from "@/layouts/Base.astro";
import { getAllPosts, sortMDByDate } from "@/data/post";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const elingProject: { desc: string; href: string; title: string }[] = [
	{
		desc: "Machine learning algorithms from scratch using Python.",
		href: "https://github.com/elingp/ml-from-scratch",
		title: "ML from Scratch",
	},
	{
		desc: "SPA with vanilla JavaScript and Webpack 5.",
		href: "https://github.com/elingp/vanilla-spa-webpack-boilerplate",
		title: "Vanilla SPA Webpack Boilerplate",
	},
	{
		desc: "Programming Q&A website in Indonesia.",
		href: "https://github.com/elingp/tanja-pemrograman",
		title: "Tanja Pemrograman",
	},
	{
		desc: "Internal study resources aggregator.",
		href: "https://github.com/elingp/seenau",
		title: "Seenau",
	},
	{
		desc: "Puskesmas Meo Meo patient information management website.",
		href: "https://github.com/elingp/sistem-informasi-puskesmas",
		title: "Sistem Informasi Puskesmas",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello, World!</h1>
		<p class="mb-4">
			I’m Eling, and welcome to my personal blog! I’ll be posting a lot of unrelated things here
			since I’m yet to find my niche. You may see my current interests on the <a
				class="cactus-link"
				href="/about"
			>
				About page
			</a>.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Projects</h2>
		<dl class="space-y-4">
			{
				elingProject.map(({ desc, href, title }) => (
					<div class="flex flex-col gap-2 md:flex-row">
						<dt>
							<span class="flex">
								<a class="cactus-link" href={href} rel="noopener noreferrer" target="_blank">
									{title}
								</a>
								:
							</span>
						</dt>
						<dd>{desc}</dd>
					</div>
				))
			}
		</dl>
	</section>
</PageLayout>
