---
import { type CollectionEntry, getCollection } from "astro:content";
import PostPreview from "@/components/blog/PostPreview.astro";
import Note from "@/components/note/Note.astro";
import SocialList from "@/components/SocialList.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";

// Posts
const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Pinned Posts, set to a max of 3;
const MAX_PINNED_POSTS = 3;
const pinnedPosts = allPostsByDate.filter((p) => p.data.pinned).slice(0, MAX_PINNED_POSTS);

// Notes
const MAX_NOTES = 5;
const allNotes = await getCollection("note");
const latestNotes = allNotes.sort(collectionDateSort).slice(0, MAX_NOTES);

const elingProject: { desc: string; href: string; title: string }[] = [
	{
		desc: "AI app to recognize several categories of foods and their calories.",
		href: "https://github.com/husain502/Careproject",
		title: "CARE (Camera Calories)",
	},
	{
		desc: "Simple ML algorithms from scratch using Python.",
		href: "https://github.com/elingp/ml-from-scratch",
		title: "ML from Scratch",
	},
	{
		desc: "SPA boilerplate using vanilla JavaScript and Webpack 5.",
		href: "https://github.com/elingp/vanilla-spa-webpack-boilerplate",
		title: "SPA Webpack Boilerplate",
	},
	{
		desc: "Forum-style programming Q&A website.",
		href: "https://github.com/elingp/tanja-pemrograman",
		title: "Tanja Pemrograman",
	},
	{
		desc: "Internal study resources aggregator website.",
		href: "https://github.com/elingp/seenau",
		title: "Seenau",
	},
	{
		desc: "Health Center patient information management website.",
		href: "https://github.com/elingp/sistem-informasi-puskesmas",
		title: "Sistem Informasi Puskesmas",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section class="prose prose-lg md:prose-xl">
		<p class="mb-4">
			Hi! I’m <b>Eling</b> (he/him). I write about my hobbies in manga, anime, and tabletop role-playing
			game; my fascination with tech; and random stuff. While I’m still discovering my niche, you’ll
			find a bit of everything that captures my interest. Enjoy!
		</p>
		<div class="not-prose"><SocialList /></div>
	</section>
	{
		pinnedPosts.length > 0 && (
			<section class="mt-12">
				<h2 class="text-accent-2 mb-6 text-2xl font-bold md:text-3xl">Pinned posts</h2>
				<ul class="space-y-4" role="list">
					{pinnedPosts.map((p) => (
						<li class="grid gap-1 sm:grid-cols-[auto_1fr]">
							<PostPreview post={p} />
						</li>
					))}
				</ul>
			</section>
		)
	}
	<section class="mt-12">
		<h2 class="text-accent-2 mb-6 text-2xl font-bold md:text-3xl">
			<a class="hover:text-accent" href="/posts/">Most recent 10 posts</a>
		</h2>
		<ul class="space-y-4" role="list">
			{
				allPostsByDate.map((p) => (
					<li class="grid gap-1 sm:grid-cols-[auto_1fr]">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	{
		latestNotes.length > 0 && (
			<section class="mt-12">
				<h2 class="text-accent-2 mb-6 text-2xl font-bold md:text-3xl">
					<a class="hover:text-accent" href="/notes/">
						Most recent 5 notes
					</a>
				</h2>
				<ul class="space-y-6" role="list">
					{latestNotes.map((note) => (
						<li>
							<Note note={note} as="h3" isPreview />
						</li>
					))}
				</ul>
			</section>
		)
	}
	<section class="mt-12">
		<h2 class="text-accent-2 mb-6 text-2xl font-bold md:text-3xl">Public projects</h2>
		<ul class="space-y-4" role="list">
			{
				elingProject.map(({ desc, href, title }) => (
					<li class="grid gap-2 text-base sm:grid-cols-[auto_1fr] md:text-lg">
						<a class="cactus-link min-w-66" href={href} rel="noopener noreferrer" target="_blank">
							{title}
						</a>
						{desc}
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
