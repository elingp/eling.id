{
	"name": "eling.id",
	"type": "module",
	"version": "6.11.0",
	"private": false,
	"engines": {
		"node": ">=24"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,json,jsonc,html}": [
			"biome check --write --no-errors-on-unmatched"
		],
		"*.{astro,css,md,mdx,yml,yaml}": [
			"prettier --write --cache"
		]
	},
	"scripts": {
		"dev": "astro dev",
		"build": "PUBLIC_COMMIT_HASH=$(git rev-parse HEAD 2>/dev/null || echo 'dev') astro build",
		"postbuild": "pagefind --site dist",
		"preview": "astro preview",
		"check": "astro check && biome check --no-errors-on-unmatched && prettier --check '**/*.{astro,css,md,mdx,yml,yaml}'",
		"check:ci": "astro check && biome ci --reporter=github --no-errors-on-unmatched && prettier --check '**/*.{astro,css,md,mdx,yml,yaml}'",
		"fix": "biome check --write --no-errors-on-unmatched && prettier --write --cache '**/*.{astro,css,md,mdx,yml,yaml}'"
	},
	"dependencies": {
		"@astrojs/markdown-remark": "^6.3.10",
		"@astrojs/mdx": "^4.3.13",
		"@astrojs/rss": "^4.0.15",
		"@astrojs/sitemap": "^3.7.0",
		"@fontsource/source-code-pro": "^5.2.7",
		"@fontsource/source-sans-3": "^5.2.9",
		"@fontsource/source-serif-4": "^5.2.9",
		"@tailwindcss/vite": "^4.1.18",
		"astro": "^5.17.1",
		"astro-embed": "^0.12.0",
		"astro-expressive-code": "^0.41.6",
		"astro-icon": "^1.1.5",
		"astro-robots-txt": "^1.0.0",
		"astro-webmanifest": "^1.0.0",
		"hastscript": "^9.0.1",
		"mdast-util-directive": "^3.1.0",
		"mdast-util-to-markdown": "^2.1.2",
		"mdast-util-to-string": "^4.0.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-unwrap-images": "^1.0.0",
		"remark-directive": "^4.0.0",
		"satori": "^0.19.1",
		"satori-html": "^0.3.2",
		"sharp": "^0.34.5",
		"ultrahtml": "^1.6.0",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.1.0"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.6",
		"@biomejs/biome": "2.3.14",
		"@iconify-json/fa7-brands": "^1.2.1",
		"@iconify-json/fa7-regular": "^1.2.2",
		"@iconify-json/fa7-solid": "^1.2.3",
		"@pagefind/default-ui": "^1.4.0",
		"@resvg/resvg-js": "^2.6.2",
		"@tailwindcss/typography": "^0.5.19",
		"@types/hast": "^3.0.4",
		"@types/mdast": "^4.0.4",
		"astro-grab": "^0.2.1",
		"astro-html-minifier-next": "^2.1.0",
		"astro-meta-tags": "^0.4.0",
		"astro-og": "^0.3.2",
		"autoprefixer": "^10.4.24",
		"lint-staged": "^16.2.7",
		"pagefind": "^1.4.0",
		"prettier": "3.8.1",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-tailwindcss": "0.7.2",
		"reading-time": "^1.5.0",
		"simple-git-hooks": "^2.13.1",
		"sonda": "^0.10.1",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"@tailwindcss/oxide",
			"esbuild",
			"sharp",
			"simple-git-hooks"
		],
		"overrides": {
			"lodash": "^4.17.23",
			"sharp": "^0.34.5"
		}
	},
	"packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
