---
import type { EnrichedTweet } from "./api.ts";

interface Props {
	tweet: EnrichedTweet;
}

const { tweet } = Astro.props;
const { user } = tweet;

const isSquare = user.profile_image_shape === "Square";

// Verified badge
type BadgeType = "blue" | "business" | "government" | null;
const badgeType: BadgeType =
	user.verified_type === "Business"
		? "business"
		: user.verified_type === "Government"
			? "government"
			: user.is_blue_verified
				? "blue"
				: null;
---

<div class="tweet-header">
	<a href={tweet.url} class="tweet-avatar" target="_blank" rel="noopener noreferrer">
		<div class:list={["tweet-avatar-img", { square: isSquare }]}>
			<img
				src={user.profile_image_url_https}
				alt={user.name}
				width="48"
				height="48"
				loading="lazy"
			/>
		</div>
	</a>
	<div class="tweet-author">
		<a href={tweet.url} class="tweet-author-name" target="_blank" rel="noopener noreferrer">
			<span>{user.name}</span>
			{
				badgeType && (
					<span class:list={["tweet-verified", badgeType]}>
						{badgeType === "government" ? (
							<svg viewBox="0 0 22 22" aria-label="Verified government account">
								<path
									fill="currentColor"
									d="M16.5 3H2v18h15c3 0 4-1 4-3.5V6.5C21 4 20 3 16.5 3zM10 17L6 13l1.5-1.5L10 14l4.5-4.5L16 11l-6 6z"
								/>
							</svg>
						) : (
							<svg viewBox="0 0 22 22" aria-label="Verified account">
								<path
									fill="currentColor"
									d="M20.396 11c-.018-.646-.215-1.275-.57-1.816-.354-.54-.852-.972-1.438-1.246.223-.607.27-1.264.14-1.897-.131-.634-.437-1.218-.882-1.687-.47-.445-1.053-.75-1.687-.882-.633-.13-1.29-.083-1.897.14-.273-.587-.704-1.086-1.245-1.44S11.647 1.62 11 1.604c-.646.017-1.273.213-1.813.568s-.969.855-1.24 1.44c-.608-.223-1.267-.272-1.902-.14-.635.13-1.22.436-1.69.882-.445.47-.749 1.055-.878 1.688-.13.633-.08 1.29.144 1.896-.587.274-1.087.705-1.443 1.245-.356.54-.555 1.17-.574 1.817.02.647.218 1.276.574 1.817.356.54.856.972 1.443 1.245-.224.607-.274 1.264-.144 1.897.13.634.433 1.218.877 1.688.47.443 1.054.747 1.687.878.633.132 1.29.084 1.897-.136.274.586.705 1.084 1.246 1.439.54.354 1.17.551 1.816.569.647-.016 1.276-.213 1.817-.567s.972-.854 1.245-1.44c.604.239 1.266.296 1.903.164.636-.132 1.22-.447 1.68-.907.46-.46.776-1.044.908-1.681s.075-1.299-.165-1.903c.586-.274 1.084-.705 1.439-1.246.354-.54.551-1.17.569-1.816zM9.662 14.85l-3.429-3.428 1.293-1.302 2.072 2.072 4.4-4.794 1.347 1.246z"
								/>
							</svg>
						)}
					</span>
				)
			}
		</a>
		<div class="tweet-author-meta">
			<a href={tweet.url} class="tweet-username" target="_blank" rel="noopener noreferrer">
				@{user.screen_name}
			</a>
			<span class="tweet-follow-sep">&middot;</span>
			<a href={user.follow_url} class="tweet-follow" target="_blank" rel="noopener noreferrer">
				Follow
			</a>
		</div>
	</div>
	<a
		href={tweet.url}
		class="tweet-brand"
		target="_blank"
		rel="noopener noreferrer"
		aria-label="View on X"
	>
		<svg viewBox="0 0 24 24" aria-hidden="true">
			<path
				fill="currentColor"
				d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
			></path>
		</svg>
	</a>
</div>
