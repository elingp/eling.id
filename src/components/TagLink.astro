---
import type { HTMLAttributes } from "astro/types";

interface Props extends Omit<HTMLAttributes<"a">, "href"> {
	href: string;
	tag: string;
	srPrefix?: string;
	showHash?: boolean;
}

const { href, tag, srPrefix, showHash = true, class: className, ...attrs } = Astro.props;
const ariaLabel = srPrefix ? `${srPrefix} ${tag}` : undefined;
const visibleText = showHash ? `#${tag}` : tag;
---

<a {href} aria-label={ariaLabel} class={className} set:text={visibleText} {...attrs} />
